centered-x()
	margin-left auto
	margin-right auto

margin-y(amount)
	margin-top amount
	margin-bottom amount

grad-bg(color-a, color-b, angle=to bottom right)
	background linear-gradient(angle, color-a, color-b)

html, body
	margin 0
	height 100%

body
	grad-bg #aaa, #eee, -45deg
	background-repeat no-repeat
	background-attachment fixed
	margin 0
	height 100%

#hud
	centered-x()
	width 200px
	height 24px

#playPauseButton
	float left

#frameRate
	font-face mono
	font-weight bold

	float right

#glContainer
	centered-x()

	margin-top 10px
	width 400px
	height 300px

#parameters
	width 1200px
	centered-x()
	background-color cyan

.layerController
	centered-x()
	width 400px
	background-color gray
	display inline-block

.range
	centered-x()
	width 350px
	background-color pink
	margin-y 10px
	border 1px solid green
	vertical-align middle

.range .slider
	width 160px

.rangeRange
	centered-x()
	width 350px
	background-color pink
	margin-y 10px
	border 1px solid green
	vertical-align middle

.controlPart
	vertical-align middle
	display inline-block

.controlName
	@extends .controlPart
	color blue
	width 60px

.rangeRange .average
	@extends .controlPart
	width 80px

.rangeRange .variance
	@extends .controlPart
	width 80px

.readOut
	@extends .controlPart
	color red
