doctype html
html
	head
		title Painterly Rendering for WebGL
		meta(charset='utf-8')
		meta(name='viewport', content='width=device-width, initial-scale=1.0')
		script(src='/script/index.js')
		link(rel='stylesheet', href='http://netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.css')
		link(rel='stylesheet',
			type='text/css',
			href='http://fonts.googleapis.com/css?family=Nova+Round|Voces|Lobster')
		link(rel='stylesheet', href='/style/index.css')

	body
		div#hud
			div#playPauseButton
				button#playButton(title='Play')
					i(class='fa fa-play')
				button#pauseButton(title='Pause')
					i(class='fa fa-pause')
			button#stopButton(title='Stop')
				i(class='fa fa-stop')
			button#screenShotButton(title='Take Screenshot')
				i(class='fa fa-camera')

			div#frameRate
				span#frameRateNumber
				span= ' FPS'

		div#glContainer

		div#parameters



